<Window x:Class="DiplomaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:DiplomaWpf"
        mc:Ignorable="d"
        Title="Админка" Height="600" Width="800"
        MinHeight="400" MinWidth="600" >

    <Window.Resources>

        <local:Base64Converter x:Key="Base64Convert"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Cursor" Value="Hand"/>

                </Trigger>


            </Style.Triggers>

        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="LightGray"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="DataGridCell.IsSelected" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>

        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="NoWrapText">
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="WordEllipsis"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>

        <Style x:Key="ContextMenuNavigate" TargetType="MenuItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <ControlTemplate x:Key="ButtonPeriod" TargetType="{x:Type ButtonBase}">
            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsDefaulted" Value="True">
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                </Trigger>

                <Trigger Property="ToggleButton.IsChecked" Value="True">
                    <Setter Property="Background" TargetName="border" Value="#FFBCDDEE"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="#FF245A83"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" TargetName="border" Value="#FFF4F4F4"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="#FFADB2B5"/>
                    <Setter Property="Foreground" Value="#FF838383"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="ViewboxProposalInfo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>

            <Setter Property="TextAlignment" Value="Left"/>


        </Style>

        <ControlTemplate x:Key="ButtonEditTemplate" TargetType="{x:Type ButtonBase}">
            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
        </ControlTemplate>

        <Style x:Key="ButtonUpdate_ButtonDelete" TargetType="Button">
            <Setter Property="Background" Value="#4682B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border CornerRadius="30"
                                Background="{TemplateBinding Background}"
                                BorderThickness="1"
                                Width="80"
                                Height="80">

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style x:Key="ButtonBack" TargetType="Button">
            <Setter Property="Background" Value="#4682B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonContactList" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddPictureProjectButton" TargetType="Button">
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <SolidColorBrush x:Key="Expander.MouseOver.Circle.Stroke" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.MouseOver.Circle.Fill" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.MouseOver.Arrow.Stroke" Color="White"/>
        <SolidColorBrush x:Key="Expander.Pressed.Circle.Stroke" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.Pressed.Circle.Fill" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.Pressed.Arrow.Stroke" Color="White"/>
        <SolidColorBrush x:Key="Expander.Disabled.Circle.Stroke" Color="White"/>
        <SolidColorBrush x:Key="Expander.Disabled.Circle.Fill" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.Disabled.Arrow.Stroke" Color="White"/>
        <SolidColorBrush x:Key="Expander.Static.Circle.Fill" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.Static.Circle.Stroke" Color="#4682B4"/>
        <SolidColorBrush x:Key="Expander.Static.Arrow.Stroke" Color="White"/>

        <Style x:Key="ExpanderHeaderFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ExpanderDownHeaderStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border Padding="{TemplateBinding Padding}">
                            <Grid Background="Transparent" SnapsToDevicePixels="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="19"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="circle" Fill="{StaticResource Expander.Static.Circle.Fill}" HorizontalAlignment="Center" Height="19" Stroke="{StaticResource Expander.Static.Circle.Stroke}" VerticalAlignment="Center" Width="19"/>
                                <Path x:Name="arrow" Data="M 1,1.5 L 4.5,5 L 8,1.5" HorizontalAlignment="Center" SnapsToDevicePixels="false" Stroke="{StaticResource Expander.Static.Arrow.Stroke}" StrokeThickness="2" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" HorizontalAlignment="Left" Margin="4,0,0,0" RecognizesAccessKey="True" SnapsToDevicePixels="True" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Data" TargetName="arrow" Value="M 1,4.5  L 4.5,1  L 8,4.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Stroke" TargetName="circle" Value="{StaticResource Expander.MouseOver.Circle.Stroke}"/>
                                <Setter Property="Fill" TargetName="circle" Value="{StaticResource Expander.MouseOver.Circle.Fill}"/>
                                <Setter Property="Stroke" TargetName="arrow" Value="{StaticResource Expander.MouseOver.Arrow.Stroke}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Stroke" TargetName="circle" Value="{StaticResource Expander.Pressed.Circle.Stroke}"/>
                                <Setter Property="StrokeThickness" TargetName="circle" Value="1.5"/>
                                <Setter Property="Fill" TargetName="circle" Value="{StaticResource Expander.Pressed.Circle.Fill}"/>
                                <Setter Property="Stroke" TargetName="arrow" Value="{StaticResource Expander.Pressed.Arrow.Stroke}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Stroke" TargetName="circle" Value="{StaticResource Expander.Disabled.Circle.Stroke}"/>
                                <Setter Property="Fill" TargetName="circle" Value="{StaticResource Expander.Disabled.Circle.Fill}"/>
                                <Setter Property="Stroke" TargetName="arrow" Value="{StaticResource Expander.Disabled.Arrow.Stroke}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ExpanderStyle" TargetType="{x:Type Expander}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Expander}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="3" SnapsToDevicePixels="true">
                            <DockPanel>
                                <ToggleButton x:Name="HeaderSite" ContentTemplate="{TemplateBinding HeaderTemplate}" ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}" Content="{TemplateBinding Header}" DockPanel.Dock="Top" Foreground="{TemplateBinding Foreground}" FontWeight="{TemplateBinding FontWeight}" FocusVisualStyle="{StaticResource ExpanderHeaderFocusVisual}" FontStyle="{TemplateBinding FontStyle}" FontStretch="{TemplateBinding FontStretch}" FontSize="{TemplateBinding FontSize}" FontFamily="{TemplateBinding FontFamily}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Margin="1" MinWidth="0" MinHeight="0" Padding="{TemplateBinding Padding}" Style="{StaticResource ExpanderDownHeaderStyle}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <ContentPresenter x:Name="ExpandSite" DockPanel.Dock="Bottom" Focusable="false" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Visibility="Collapsed" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="true">
                                <Setter Property="Visibility" TargetName="ExpandSite" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AddPhotoBlog" TargetType="Button">
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="375*"/>
        </Grid.RowDefinitions>



        <Grid Grid.Row="0" Background="#4682B4" Margin="0,0,5,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CallToActionVisibilityButton" Grid.Column="1" Margin="0,10"  MaxWidth="350" MinWidth="250" Visibility="Collapsed"
                        Click="CallToActionVisibilityButton_Click">
                    <Viewbox HorizontalAlignment="Center" Margin="1,1">
                        <TextBlock Text="Список с призывами к действию" Width="280" MinWidth="280" MaxWidth="280" />
                    </Viewbox>

                </Button>
                <TextBlock x:Name="nameText" Grid.Column="2" HorizontalAlignment="Center" 
                       Margin="28,22,27,22"
                       TextWrapping="Wrap"
                       Text="TextBlock"
                       VerticalAlignment="Center" 
                       Foreground="White"/>

            </Grid>



        </Grid>

        <Grid Margin="0,0,5,0" Grid.Row="1" Background="#4682B4">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140*"/>
                <ColumnDefinition Width="630*"/>
            </Grid.ColumnDefinitions>



            <Border Grid.Column="0" Margin="10,0,10,20">
                <Viewbox VerticalAlignment="Top" >
                    <ListBox x:Name="nawigateButtonsList"  Background="#4682B4"
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                         BorderBrush="#4682B4">

                        <ListBoxItem Margin="0,1,0,1">

                            <Button x:Name="desctopButton" Background="#4682B4" 
                                Foreground="White" Template="{StaticResource ResourceKey=ButtonEditTemplate}"
                                    Click="DesctopButton_Click"/>

                        </ListBoxItem>

                        <ListBoxItem Margin="0,1,0,1" >

                            <Button x:Name="homeButton"  Background="#4682B4"
                                Foreground="White" Template="{StaticResource ResourceKey=ButtonEditTemplate}"
                                    Click="HomeButton_Click"/>


                        </ListBoxItem>

                        <ListBoxItem Margin="0,1,0,1" >

                            <Button x:Name="projectButton"  Background="#4682B4" 
                                Foreground="White" Template="{StaticResource ResourceKey=ButtonEditTemplate}"
                                        Click="ProjectButton_Click"/>

                        </ListBoxItem>

                        <ListBoxItem Margin="0,1,0,1">

                            <Button x:Name="serviceButton"  Background="#4682B4" 
                                Foreground="White" Template="{StaticResource ResourceKey=ButtonEditTemplate}"
                                    Click="ServiceButton_Click"/>

                        </ListBoxItem>

                        <ListBoxItem Margin="0,1,0,1">

                            <Button x:Name="blogButton"  Background="#4682B4" 
                                Foreground="White" Template="{StaticResource ResourceKey=ButtonEditTemplate}"
                                    Click="BlogButton_Click"/>

                        </ListBoxItem>

                        <ListBoxItem Margin="0,1,0,1">

                            <Button x:Name="contactButton"  Background="#4682B4"
                                Foreground="White" Template="{StaticResource ResourceKey=ButtonEditTemplate}"
                                    Click="ContactButton_Click"/>

                        </ListBoxItem>

                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Переименовать"
                                      Style="{StaticResource ContextMenuNavigate}"
                                      Click="NawigateButtonHeaderChange"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox >
                </Viewbox>
            </Border>

            <Grid x:Name="homeGrid" Grid.Column="1" Margin="1" Background="LightGray" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="1" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Background="White"
                              Grid.Column="0"
                              TextAlignment="Left" Foreground="DarkGray" 
                              VerticalAlignment="Center" FontSize="20" Margin="2"
                              Text="{Binding ProposalsCount,UpdateSourceTrigger=PropertyChanged}">

                    </TextBlock>
                    <TextBlock x:Name="checkText"  Background="White" Grid.Column="1"
                           TextAlignment="Right" Foreground="Red" 
                           VerticalAlignment="Center" FontSize="20" Margin="2"/>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1" Background="White" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="180*"/>
                        <ColumnDefinition Width="15*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Click="Todey_ButtonClick"
                                Content="Сегодня" 
                                Margin="2,0,2,0"
                                BorderThickness="0" Template="{DynamicResource ButtonPeriod}">

                    </Button>

                    <Button Grid.Column="1" Click="Yesterday_ButtonClick"
                                Margin="2,0,2,0"
                                Content="Вчера" 
                                BorderThickness="0" Template="{DynamicResource ButtonPeriod}">

                    </Button>

                    <Button Grid.Column="2" Click="Week_ButtonClick"
                                Margin="2,0,2,0"
                                Content="Неделя" 
                                BorderThickness="0" Template="{DynamicResource ButtonPeriod}">

                    </Button>

                    <Button Grid.Column="3" Click="Month_ButtonClick"
                                Margin="2,0,2,0"
                                Content="Месяц" 
                                BorderThickness="0" Template="{DynamicResource ButtonPeriod}">

                    </Button>

                    <Grid Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="periodStart" Grid.Column="0" BorderThickness="0" Background="Gainsboro" 
                                Template="{DynamicResource ButtonPeriod}"
                                Margin="0,20"
                                Content="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalContentAlignment="Left"
                                Click="PeriodStart_Click"/>

                        <TextBlock Grid.Column="1"
                                Text="-" Foreground="DarkGray"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>

                        <Button x:Name="periodEnd" Grid.Column="2" BorderThickness="0" Background="Gainsboro"
                                Template="{DynamicResource ButtonPeriod}"
                                Margin="0,20"
                                Content="{Binding EndDate,UpdateSourceTrigger=PropertyChanged}"
                                HorizontalContentAlignment="Left"
                                Click="PeriodEnd_Click"/>
                    </Grid>

                </Grid>

                <Grid Grid.Row="2" Grid.Column="1" Background="LightGray">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="10*"/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0">
                            <StackPanel Orientation="Horizontal" >

                                <TextBlock x:Name="doneHeader"  Margin="3,0" 
                                    Text="Кол-во заявок за указанный период:" 
                                     MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}"
                               VerticalAlignment="Center"/>
                                <TextBlock x:Name="proposalsCountPeriod" Margin="3,0" 
                                       MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}"
                                    VerticalAlignment="Center"/>

                            </StackPanel>
                        </Viewbox>

                        <Button x:Name="receivedButton" Grid.Column="1"
                                Background="LightGray" Click="ReceivedButton_Click" >
                            <Viewbox MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="2,0"       
                                    Text="Получено:"
                                    Foreground="#0000CD"        
                                    VerticalAlignment="Center">
                                    </TextBlock>

                                    <TextBlock  Margin="1,0"
                                               Text="{Binding Received, UpdateSourceTrigger=PropertyChanged}"
                                               Foreground="#0000CD"
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </StackPanel>
                            </Viewbox>
                        </Button>

                        <Button x:Name="atWorkButton" Grid.Column="2" 
                                Background="LightGray" Click="AtWorkButton_Click" >
                            <Viewbox MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="2,0" 
                                    Text="В работе:"
                                    Foreground="#FF8C00"        
                                    VerticalAlignment="Center">
                                    </TextBlock>

                                    <TextBlock Margin="1,0"
                                               Text="{Binding AtWork, UpdateSourceTrigger=PropertyChanged}"
                                               Foreground="#FF8C00"
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </StackPanel>
                            </Viewbox>
                        </Button>

                        <Button x:Name="doneButton" Grid.Column="3" 
                                Background="LightGray" Click="DoneButton_Click" >
                            <Viewbox MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}">
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock  Margin="2,0" 
                                    Text="Выполнено:"
                                    Foreground="#006400" 
                                    VerticalAlignment="Center">
                                    </TextBlock>

                                    <TextBlock Margin="1,0"
                                               Text="{Binding Done, UpdateSourceTrigger=PropertyChanged}"
                                               Foreground="#006400"
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </StackPanel>
                            </Viewbox>
                        </Button>

                        <Button x:Name="cancelledButton" 
                                Grid.Column="4" Background="LightGray"
                                Click="CancelledButton_Click">
                            <Viewbox MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="2,0" Grid.Column="4"
                                    Foreground="Black"            
                                    Text="Отменено:"       
                                    VerticalAlignment="Center">
                                    </TextBlock>

                                    <TextBlock Margin="1,0" Grid.Column="4"
                                               Text="{Binding Cancelled, UpdateSourceTrigger=PropertyChanged}"
                                               Foreground="Black"
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </StackPanel>
                            </Viewbox>
                        </Button>

                        <Button x:Name="rejectedButton" Grid.Column="5" 
                                Background="LightGray"
                                Click="RejectedButton_Click">
                            <Viewbox MaxHeight="{Binding ElementName=doneHeader, Path=ActualHeight}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="2,0" 
                                    Foreground="Red"            
                                    Text="Отклонено:"
                                    VerticalAlignment="Center">
                                    </TextBlock>

                                    <TextBlock Margin="1,0"
                                               Text="{Binding Rejected, UpdateSourceTrigger=PropertyChanged}"
                                               Foreground="Red"
                                               VerticalAlignment="Center">
                                    </TextBlock>
                                </StackPanel>
                            </Viewbox>
                        </Button>
                    </Grid>
                </Grid>

                <Grid x:Name="proposalsGrid" Grid.Row="3" Grid.Column="1" Background="White"
                       Margin="0,0,0,20">
                    <DataGrid AutoGenerateColumns="False" 
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              CanUserAddRows="False" SelectionChanged="ProposalsList_SelectionChanged"
                              ItemsSource="{Binding Proposals,UpdateSourceTrigger=PropertyChanged}">

                        <DataGrid.Columns >
                            <DataGridTextColumn Header="№ заявки" Binding="{Binding Path=Id}" Width="7*" ElementStyle="{StaticResource NoWrapText}"/>
                            <DataGridTextColumn Header="Время заявки" Width="10*" Binding="{Binding Path=Data, StringFormat=dd.MM.yyyy  hh:mm}" ElementStyle="{StaticResource NoWrapText}"/>
                            <DataGridTextColumn Header="Имя" Width="10*" Binding="{Binding Path=LastFirstName}" ElementStyle="{StaticResource NoWrapText}"/>
                            <DataGridTextColumn Header="Текст заявки" Width="20*" Binding="{Binding Path=Text}" ElementStyle="{StaticResource NoWrapText}"/>
                            <DataGridTextColumn Header="Контакты" Width="10*" Binding="{Binding Path=Email}" ElementStyle="{StaticResource NoWrapText}"/>
                            <DataGridTextColumn Header="Статус" Width="10*" Binding="{Binding Path=Status}" ElementStyle="{StaticResource NoWrapText}"/>

                        </DataGrid.Columns>
                    </DataGrid>


                </Grid>

                <Grid x:Name="proposalGrid" Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" 
                       Margin="0,0,0,30" Background="White" Visibility="Collapsed">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220*"/>
                        <ColumnDefinition Width="377*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0"
                             MaxHeight="{Binding ElementName=appealText, Path=ActualHeight}">
                        <TextBlock  Text="Имя и фамилия:" Padding="30,10"

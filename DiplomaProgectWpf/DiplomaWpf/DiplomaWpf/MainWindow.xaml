                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="200*"/>
                        <RowDefinition Height="33*"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Margin="0" HorizontalAlignment="Left" 
                             VerticalAlignment="Center">
                        <TextBlock Foreground="#4682B4" Text="{Binding ElementName=blogButton, Path=Content}"/>
                    </Viewbox>

                    <TextBlock Grid.Row="1"  Background="#4682B4"/>

                    <ListView x:Name="blogList" Grid.Row="2" ItemsSource="{Binding Blogs, UpdateSourceTrigger=PropertyChanged}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              HorizontalContentAlignment="Center" 
                              Background="LightGray"
                              BorderBrush="LightGray">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter Margin="5"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           Focusable="False"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate  >
                            <DataTemplate>
                                <Grid Width="300" Background="LightGray">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="DarkGray">
                                        <Viewbox HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Date,UpdateSourceTrigger=PropertyChanged,StringFormat=dd.MM.yyyy}"/>
                                        </Viewbox>
                                    </Border>


                                    <Image Grid.Row="1"  Stretch="UniformToFill" 
                                            Source="{Binding Picture, Converter={StaticResource ResourceKey=Base64Convert},
                                        UpdateSourceTrigger=PropertyChanged}"/>

                                    <Border Grid.Row="2" Background="DarkGray">
                                        <TextBlock   Margin="3" 
                                                     Text="{Binding Header, UpdateSourceTrigger=PropertyChanged}" 
                                                     TextWrapping="Wrap" TextTrimming="WordEllipsis" VerticalAlignment="Center" FontWeight="Bold" />

                                    </Border>

                                    <Border Grid.Row="3" Background="DarkGray">
                                        <TextBlock   Margin="3" 
                                    Text="{Binding Path=Description}" TextWrapping="Wrap" VerticalAlignment="Center"
                                                     TextTrimming="WordEllipsis" />

                                    </Border>

                                    <Grid Grid.Row="4"  Margin="0,5,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80*"/>
                                            <ColumnDefinition Width="15*"/>
                                            <ColumnDefinition Width="15*"/>
                                        </Grid.ColumnDefinitions>
                                        <Viewbox Grid.Column="1" Margin="0">

                                            <Button x:Name="updateBlogButton"
                                                    Style="{StaticResource ButtonUpdate_ButtonDelete}"
                                                    Click="UpdateBlogButton_Click">

                                                <Button.Background>
                                                    <ImageBrush ImageSource="/StaticResource/img/icon-update.png"/>
                                                </Button.Background>
                                            </Button>

                                        </Viewbox>

                                        <Viewbox Grid.Column="2" Margin="0">
                                            <Button x:Name="deleteBlogButton"
                                                    Style="{StaticResource ButtonUpdate_ButtonDelete}"
                                                    Click="DeleteBlogButton_Click">

                                                <Button.Background>
                                                    <ImageBrush ImageSource="/StaticResource/img/icon-delete.png"/>
                                                </Button.Background>
                                            </Button>

                                        </Viewbox>

                                    </Grid>

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="30*"/>
                        </Grid.ColumnDefinitions>

                        <Border Margin="20,15" CornerRadius="10" Background="#4682B4"
                            Grid.Column="1">

                            <Button x:Name="addBlogButton"  Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                                    Click="AddBlogButton_Click">
                                <Viewbox>
                                    <TextBlock Text="Добавить пост" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                                </Viewbox>
                            </Button>
                        </Border>

                    </Grid>

                </Grid>
            </Grid>

            <Grid x:Name="blogAddUpdateGrid"  Grid.Column="1" Margin="1" Background="LightGray" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="66*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="90*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="idUpdateBlog" Visibility="Hidden" Text="{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}"/>

                    <Viewbox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"
                         Margin="7,7,0,7">
                        <TextBlock Text="Заголовок" Foreground="#4682B4"/>


                    </Viewbox>

                    <Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="0">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <TextBox VerticalAlignment="Center" FontSize="20" Text="{Binding Path=Header, UpdateSourceTrigger=PropertyChanged}"/>
                        </ScrollViewer>


                    </Border>

                    <Viewbox x:Name="descriptionBlogHeader" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left"
                         Margin="20,7,0,7">
                        <TextBlock  Text="Содержимое поста " Foreground="#4682B4" TextWrapping="WrapWithOverflow"/>

                    </Viewbox>

                    <Border Grid.Row="4" Grid.Column="2">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <TextBox Margin="20,0,0,0" FontSize="15" TextWrapping="Wrap" Text="{Binding Path=Description , UpdateSourceTrigger=PropertyChanged}"/>
                        </ScrollViewer>

                    </Border>

                    <Border Grid.Column="1" Grid.Row="4" BorderBrush="DarkGray" CornerRadius="5" BorderThickness="1">
                        <Button x:Name="addPictureBlog" FontSize="15" Foreground="Gray" Style="{StaticResource AddPhotoBlog}"
                                Click="AddPictureBlog_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="{Binding Picture, Converter={StaticResource Base64Convert}, UpdateSourceTrigger=PropertyChanged}"/>
                            </Button.Background>
                        </Button>
                    </Border>

                    <Border x:Name="blogAddSave" Grid.Column="2" Grid.Row="6" Margin="300,10,10,10" CornerRadius="10" 
                            Background="#4682B4" Visibility="Collapsed">

                        <Button   
                             Margin="10,0,10,0" Background="#4682B4"
                                     Template="{DynamicResource ButtonEditTemplate}" Click="BlogAddSave_Click" >


                            <Viewbox>
                                <TextBlock Text="Добавить" Foreground="White"
                                               Margin="0,1" VerticalAlignment="Center"
                                               TextAlignment="Center"/>
                            </Viewbox>
                        </Button>
                    </Border>

                    <Border x:Name="blogUpdateSave" Grid.Column="2" Grid.Row="6" Margin="300,10,10,10" CornerRadius="10" 
                            Background="#4682B4" Visibility="Collapsed">

                        <Button    
                             Margin="10,0,10,0" Background="#4682B4"
                                     Template="{DynamicResource ButtonEditTemplate}" Click="BlogUpdateSave_Click" >


                            <Viewbox>
                                <TextBlock Text="Изменить" Foreground="White"
                                               Margin="0,1" VerticalAlignment="Center"
                                               TextAlignment="Center"/>
                            </Viewbox>
                        </Button>
                    </Border>

                </Grid>
            </Grid>

            <Grid x:Name="contactsGrid" Grid.Column="1" Margin="1" Background="LightGray" Visibility="Collapsed">
                <Grid Margin="20"  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="200*"/>
                        <RowDefinition Height="33*"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Margin="0" HorizontalAlignment="Left" 
                             VerticalAlignment="Center">
                        <TextBlock Foreground="#4682B4" Text="{Binding ElementName=contactButton, Path=Content}"/>
                    </Viewbox>

                    <TextBlock Grid.Row="1"  Background="#4682B4"/>

                    <Grid Grid.Row="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="60*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                        </Grid.RowDefinitions>

                        <TextBox Text="{Binding Id,UpdateSourceTrigger=PropertyChanged}" Visibility="Hidden"/>

                        <TextBlock Margin="5" Grid.Row="2" TextAlignment="Center" TextWrapping="Wrap" 
                                   Text="{Binding ElementName=contactTextBox, Path=Text}" Grid.RowSpan="2" />

                        <TextBox x:Name="contactTextBox" Margin="5" Grid.Row="2" TextAlignment="Center" TextWrapping="Wrap"
                                 Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="2" Visibility="Collapsed" />

                        <Grid x:Name="imagUpadeContact" Grid.Column="1" Margin="5" Grid.Row="1" Grid.RowSpan="4" Visibility="Visible">
                            <Button Click="ImagUpdateContact" Style="{StaticResource AddPictureProjectButton}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding Picture,Converter={StaticResource Base64Convert},UpdateSourceTrigger=PropertyChanged}"/>
                                </Button.Background>
                            </Button>

                        </Grid>
                        <Button x:Name="linksEdit"  Margin="1" Grid.Row="4" Style="{StaticResource ButtonContactList}" Click="LinksEdit_Click" >
                            <Grid MaxHeight="50" MaxWidth="350" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="20*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10">
                                    <Image Source="StaticResource/img/logo_facebook.png"/>
                                </Grid>
                                <Grid Grid.Column="1" Margin="10">
                                    <Image Source="StaticResource/img/logo_whatsApp.png"/>
                                </Grid>
                                <Grid Grid.Column="2" Margin="10">
                                    <Image Source="StaticResource/img/logo_youtube.png"/>
                                </Grid>
                                <Grid Grid.Column="3" Margin="10">
                                    <Image Source="StaticResource/img/logo_insta.png"/>
                                </Grid>
                                <Grid Grid.Column="4" Margin="10">
                                    <Image Source="StaticResource/img/logo_twitter.png"/>
                                </Grid>

                            </Grid>
                        </Button>
                    </Grid>


                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="30*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="contactsEdit" Margin="20,15" CornerRadius="10" Background="#4682B4"
                            Grid.Column="1" Visibility="Collapsed">

                            <Button   Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                                    Click="ContactsEdit_Click" >
                                <Viewbox>
                                    <TextBlock Text="Редактировать" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                                </Viewbox>
                            </Button>

                        </Border>

                        <Border x:Name="contactsSave" Margin="20,15" CornerRadius="10" Background="#4682B4"
                            Grid.Column="1" Visibility="Collapsed">

                            <Button   Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                                    Click="ContactsSave_Click" >
                                <Viewbox>
                                    <TextBlock Text="Сохранить" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                                </Viewbox>
                            </Button>
                        </Border>

                    </Grid>

                </Grid>

            </Grid>

        </Grid>

        <Grid  Margin="1" Background="Black" Grid.RowSpan="2"  Opacity="0.7" Visibility="{Binding ElementName=contactLinksGrid, Path=Visibility}">
        </Grid>

        <Grid x:Name="contactLinksGrid" Margin="200"  Background="LightGray" Grid.RowSpan="2" MaxHeight="300" MaxWidth="500" Visibility="Collapsed" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>


            <Image Grid.Column="1" Grid.Row="1" Source="/StaticResource/img/logo_facebook.png"/>
            <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding FaceBookText, UpdateSourceTrigger=PropertyChanged}"/>

            <Image Grid.Column="1" Grid.Row="3" Source="/StaticResource/img/logo_whatsApp.png"/>
            <TextBox Grid.Column="3" Grid.Row="3" Text="{Binding WhatsAppText, UpdateSourceTrigger=PropertyChanged}"/>

            <Image Grid.Column="1" Grid.Row="5" Source="/StaticResource/img/logo_youtube.png"/>
            <TextBox Grid.Column="3" Grid.Row="5" Text="{Binding YoutobeText, UpdateSourceTrigger=PropertyChanged}"/>

            <Image Grid.Column="1" Grid.Row="7" Source="/StaticResource/img/logo_insta.png"/>
            <TextBox Grid.Column="3" Grid.Row="7" Text="{Binding InstaText, UpdateSourceTrigger=PropertyChanged}"/>

            <Image Grid.Column="1" Grid.Row="9" Source="/StaticResource/img/logo_twitter.png"/>
            <TextBox Grid.Column="3" Grid.Row="9" Text="{Binding TwitterText, UpdateSourceTrigger=PropertyChanged}"/>


            <Border Grid.Column="3" Grid.Row="11"  CornerRadius="10" Background="#4682B4" Margin="50,0" MaxWidth="300">


                <Button x:Name="contactLinksSave"   Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                            Click="ContactLinksSave_Click">

                    <Viewbox>
                        <TextBlock Text="Сохранить" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                    </Viewbox>
                </Button>

            </Border>



        </Grid>

        <Grid  Margin="1" Background="Black" Grid.RowSpan="2"  Opacity="0.7" Visibility="{Binding ElementName=callToActionGrid, Path=Visibility}">
        </Grid>

        <Grid x:Name="callToActionGrid" Margin="100"  Background="LightGray" Grid.RowSpan="2" MaxHeight="500" MaxWidth="700" Visibility="Collapsed" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="80*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="checkBlockCallToActionGrid" Grid.Row="0" Margin="25,5,5,15"
                       Foreground="Red" FontSize="10" Text="Выберите элемент из списка" Visibility="Collapsed"/>

            <ListBox x:Name="listBoxAction" Grid.Row="0" Margin="10,25,10,5" 
                     ItemsSource="{Binding ActionsList,UpdateSourceTrigger=PropertyChanged}"
                     SelectionChanged="ListBoxAction_SelectionChanged">


                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text,UpdateSourceTrigger=PropertyChanged}"
                                   TextWrapping="NoWrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

            <TextBox x:Name="textBoxActionGrid" Grid.Row="1" Margin="5" Text="{Binding TextBoxAction,UpdateSourceTrigger=PropertyChanged}" 
                     Visibility="Collapsed"/>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                <Border x:Name="borderRemoveAction"  Grid.Row="0"  CornerRadius="10" Background="#4682B4" Margin="10" MaxWidth="80" MaxHeight="30">
                    <Button x:Name="removeAction"  Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                        Click="RemoveAction_Click">


                        <Viewbox>
                            <TextBlock Text="Удалить" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                        </Viewbox>
                    </Button>


                </Border>
                <Border x:Name="borderAddAction"  Grid.Row="1"  CornerRadius="10" Background="#4682B4" Margin="10" MaxWidth="80" MaxHeight="30">
                    <Button x:Name="addAction"  Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}" 
                            Click="AddAction_Click">
                        <Viewbox>
                            <TextBlock Text="Добавить" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                        </Viewbox>
                    </Button>
                </Border>
                <Border x:Name="borderSaveAction" Grid.Row="1"  CornerRadius="10" Background="#4682B4" Margin="10" MaxWidth="80" MaxHeight="30"
                    Visibility="Collapsed">
                    <Button x:Name="saveAction"  Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                            Click="SaveAction_Click">
                        <Viewbox>
                            <TextBlock Text="Сохранить" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                        </Viewbox>
                    </Button>
                </Border>
                <Border Grid.Row="3"  CornerRadius="10" Background="#4682B4" Margin="10" MaxWidth="80" MaxHeight="30">
                    <Button x:Name="backAction"  Margin="10,0,10,0"  Background="#4682B4" Template="{DynamicResource ButtonEditTemplate}"
                            Click="BackAction_Click">
                        <Viewbox>
                            <TextBlock Text="Назад" Foreground="White"
                                           Margin="0,1" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                        </Viewbox>
                    </Button>
                </Border>
            </Grid>






        </Grid>

        <Grid x:Name="autorizationGrid" Margin="0" Grid.RowSpan="2"  Background="LightGray" Visibility="Visible">

            <Grid Margin="150" MaxWidth="250" MaxHeight="250">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="90*"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.Row="0" Grid.ColumnSpan="2">
                    <TextBlock   Text="Пожалуйста авторизуйтесь"
                           VerticalAlignment="Center" FontSize="25"/>
                </Viewbox>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="Логин" HorizontalAlignment="Left" 
                         FontSize="25" Margin="-112,5,0,0" Width="182"/>

                <TextBox Grid.Column="1" Grid.Row="1" Margin="0,5,-116,18" FontSize="25" Text="{Binding Login,UpdateSourceTrigger=PropertyChanged }"/>
                   

                <TextBlock Grid.Column="0" Grid.Row="2" Text="Пароль" HorizontalAlignment="Left" 
                         FontSize="25" Margin="-112,5,0,0" Width="182"/>

                <TextBox Grid.Column="1" Grid.Row="2" Margin="0,5,-116,18" FontSize="25" Text="{Binding Password,UpdateSourceTrigger=PropertyChanged }"/>
                   

                <Button x:Name="entrance" Grid.Row="3" Grid.ColumnSpan="2" Margin="10" MaxHeight="50" MaxWidth="300" 
                        Background="DarkGray" Foreground="Black" BorderThickness="1" BorderBrush="Black" Content="Войти"
                        Click="Entrance_Click"/>

                <Viewbox Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="-128,20,0,18" Width="123" Visibility="Collapsed">
                    
                <Button x:Name="registration"
                        Background="DarkGray" Foreground="Black" BorderThickness="1" BorderBrush="Black" 
                        Content="Зарегистрироваться" Click="Registration_Click" />
                </Viewbox>


            </Grid>
            <TextBlock x:Name="checkAutorize" HorizontalAlignment="Left" Margin="156,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="507"
                       TextAlignment="Center" FontSize="20" Foreground="Red" Text="Пользователь не найден" Visibility="Collapsed"/>

        </Grid>

    </Grid>

</Window>

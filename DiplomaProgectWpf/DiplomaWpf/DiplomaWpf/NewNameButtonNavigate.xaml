<Window x:Class="DiplomaWpf.NewNameButtonNavigate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomaWpf"
        mc:Ignorable="d"
        Title="NewNameButtonNavigate" Height="100" Width="300" MaxHeight="100" 
        MaxWidth="300" MinHeight="100" MinWidth="300"
        WindowStyle="None">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0" Margin="10,5">
                <TextBlock Text="Введите новое название"/>
                
            </Viewbox>
            
                <TextBlock x:Name="indexNewNameButton" Visibility="Hidden"/>
         
            <TextBox x:Name="newButtonName" Grid.Row="1" Margin="10,5"/>
           

          
             <Button Grid.Row="2" Content="Изменить" Margin="100,2" Click="Update_Click"/>
            
        </Grid>
    </Grid>
</Window>


@{
    Layout = "_Layout";
}
@model IEnumerable<Project>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Projects</title>
</head>
<body>
    @section footer{}
    <div class="projects">
        <b>@ViewBag.Buttons[1]</b>
        <div class="line"></div>
        <div>
            <ul>
                @{
                    foreach (var e in Model)
                    {

                        <li class="projectsList">
                            <a href="/Home/Project/@e.Id">
                                 <img src="data:image;base64,@Convert.ToBase64String(e.Picture)" />
                                 <p>@e.Header</p>
                            </a>

                        </li>

                    }

                }
            </ul>
        </div>
    </div>
</body>
</html>
